<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Doctors</h1>

<table>
  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to 'New Doctor', new_doctor_path %>
      </td>
    </tr>
   <tfoot>
  <tbody>
    <% @doctors.each do |doctor| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <h1><%= link_to "#{doctor.name} #{doctor.surname}", doctor %></h1>
        </td>
        <td>
          <%= doctor.specialization %>
        </td>
<!--        <td class="description"><%#= doctor.phone_number %></td>-->
        <td class="description">
          <%= doctor.work_hours %>
        </td>
        <td class="actions">
          <ul>
            <li><%= link_to 'Edit', edit_doctor_path(doctor) %></li>
            <li><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
