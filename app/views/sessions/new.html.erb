<section class="clinic_form">
  <p id="notice"><%= notice %></p>
  <p style="color:red;"><%= alert %></p>
  <%= form_tag do %>
    <h2>Please Log In</h2>
    <div class="field">
      <%= label_tag :email, 'Email:' %>
    </div>
    <div class="field">
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password, 'Password:' %>
    </div>
    <div class="field">
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="actions">
      <%= submit_tag 'Login', class: 'btn btn-success btn-sm' %> or
      <%= link_to 'Sign Up', new_user_url, class: 'btn btn-warning btn-sm' %>
    </div>
  <% end %>


</section>