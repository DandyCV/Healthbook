<h1>Welcome administrator</h1>
<h6>
  It's <%= Time.now.strftime("%d.%m.%Y") %>.
  We have <%= pluralize(@today_visits.count, "visit") %> for today.
</h6>

<table class="table">
  <thead>
  <tr>
    <th>Doctor</th>
    <th>User</th>
    <th>Start time</th>
    <th>End time</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @today_visits.each do |visit| %>
    <tr>
      <td><%= "#{visit.doctor.name} #{visit.doctor.surname}" %></td>
      <td><%= "#{visit.user.name} #{visit.user.surname}" %></td>
      <td><%= visit.start_time.strftime("%H:%M") %></td>
      <td><%= visit.end_time.strftime("%H:%M") %></td>
      <td><%= link_to 'Show', visit, class: 'btn btn-outline-primary btn-sm' %></td>
      <td><%= link_to 'Cancel', visit, method: :delete, data: { confirm: 'Are you sure?' },
                      class: 'btn btn-outline-danger btn-sm'%></td>
    </tr>
  <% end %>
  </tbody>
</table>