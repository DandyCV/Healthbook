<aside id="notice"><%= notice %></aside>
<aside style="color:red;"><%= alert %></aside>
<h1>Users</h1>

<table class="table">
  <thead class>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Birthday</th>
      <th>Phone number</th>
      <th>Is admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.birthday.strftime("%d-%m-%Y") %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_user_path(user),
                        class: 'btn btn-outline-warning btn-sm' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' },
                        class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-outline-success btn-sm' %>
