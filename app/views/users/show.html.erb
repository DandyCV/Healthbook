<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Surname:</strong>
  <%= @user.surname %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @user.phone_number %>
</p>
<% if @current_user.is_admin %>
<p>
  <strong>Is admin:</strong>
  <%= @user.is_admin %>
</p>
<% end %>

<%= link_to 'Edit account', edit_user_path(@user), class: 'btn btn-warning btn-sm' %>

<h1>User's visits</h1>
<% if @visits.empty? %>
  <h4>You don't have visits right now:</h4>
<% end %>
<% unless @visits.empty? %>
<table class="table">
  <thead>
  <tr>
    <th>Doctor</th>
    <th>Start time</th>
    <th>End time</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @visits.each do |visit| %>
    <tr>
      <td><%= "#{visit.doctor.name} #{visit.doctor.surname}" %></td>
      <td><%= visit.start_time %></td>
      <td><%= visit.end_time %></td>
      <td><%= link_to 'Show', visit, class: 'btn btn-info btn-sm' %></td>
      <td><%= link_to 'Cancel', visit, method: :delete, data: { confirm: 'Are you sure?' },
                      class: 'btn btn-danger btn-sm' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>